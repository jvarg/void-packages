export PORTMIDI_INC_PORTTIME=1

python3-pygame_package() {
	pycompile_module="pygame"
	short_desc="${short_desc/Python2/Python3}"
	pkg_install() {
		vmove usr/lib/python3*
		vmove usr/include/python3*
	}
}
