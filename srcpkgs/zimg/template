# Template file for 'zimg'
pkgname=zimg
version=2.5.1
revision=1
wrksrc=zimg-release-${version}
build_style=gnu-configure
hostmakedepends="automake libtool pkg-config"
short_desc="Image processing library"
maintainer="lemmi <lemmi@nerd2nerd.org>"
license="WTFPL"
homepage="https://github.com/sekrit-twc/zimg"
distfiles="https://github.com/sekrit-twc/zimg/archive/release-${version}.tar.gz"
checksum=deb85887081cab7fa9c492b588900d60d6466e61ee8ea51a84ca280688d93de9

pre_configure() {
	./autogen.sh
}

post_install() {
	vlicense COPYING
}

zimg-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.a"
		vmove "usr/lib/*.so"
	}
}
