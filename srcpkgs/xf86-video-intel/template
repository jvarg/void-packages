LDFLAGS="-Wl,-z,lazy"

do_fetch() {
	git clone git://anongit.freedesktop.org/xorg/driver/xf86-video-intel ${wrksrc}
	cd ${wrksrc}
	# Latest commit as of 20170610
	git reset --hard 6babcf15dd605ef40de53f5c34f95b7fd195edbe
}
pre_configure() {
	NOCONFIGURE=1 ./autogen.sh
}
post_install() {
	vlicense COPYING
}
